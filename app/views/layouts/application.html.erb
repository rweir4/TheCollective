<!DOCTYPE html>
<html>
  <head>
    <title>TheCollective</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <script>
      window.logo = "<%= asset_path('collective_Logo.png') %>"
      window.white_item_btn = "<%= asset_path('add_item_btn_white.png') %>"
      window.red_item_btn = "<%= asset_path('add_item_btn.png') %>"
      window.collect = "<%= asset_path('collect_red.png') %>"
      window.loading = "<%= asset_path('loading.png') %>"
      window.search = "<%= asset_path('search.png') %>"
      window.edit = "<%= asset_path('edit.png') %>"
      window.login_demo = "<%= asset_path('login_demo.gif') %>"
      window.default_img = "<%= asset_path('default_img.png') %>"
    </script>
  </head>

  <body>
    <script type="text/javascript">
      <% if logged_in? %>
      	window.currentUser =
          <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      <% end %>
    </script>

    <%= yield %>
  </body>
</html>
